<Window x:Class="ValorVDC_BIMTools.Commands.SpecifyLength.SpecifyLengthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ValorVDC_BIMTools.Commands.SpecifyLength"
        mc:Ignorable="d"
        Title="Specify Length" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Background="Beige">
        <TextBlock Text="Specify the new length of the Element:" 
                   HorizontalAlignment="Center"
                   Margin="10, 25 , 5, 5"/>
        <TextBox x:Name="InputLength" 
                 Width="200"
                 Height="25"
                 HorizontalAlignment="Center"
                 Margin="10, 10, 0,0"/>
        <Button Name="ActionButton"
                Click="OKButton_Click"
                Content="Let's Do This"
                HorizontalAlignment="Center"
                Margin="10, 10,10 ,10"
                Padding="7"
                Background="LawnGreen"/>
    </StackPanel>
</Window>
