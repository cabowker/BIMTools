<Window
    x:Class="SpecifyLength.Views.SpecifyLengthView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:SpecifyLength.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModel:SpecifyLengthViewModel}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Title="Specify Length" Height="260" Width="300">
    <StackPanel Background="Beige">
        <TextBlock Text="Specify the new length of the Element:"
                   HorizontalAlignment="Center"
                   Margin="10, 25 , 5, 5" />
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="InputLengthFeet"
                     Text="{Binding LengthFeet, UpdateSourceTrigger=PropertyChanged}"
                     TextAlignment="Center"
                     VerticalAlignment="Center"
                     Width="200"
                     HorizontalAlignment="Center"
                     Padding="0, 3"
                     Margin="45, 10, 0,0" />
            <TextBlock Text="Feet"
                       HorizontalAlignment="Center"
                       Margin="5, 12, 0,0" />
        </StackPanel>
        <TextBlock Text="OR"
                   HorizontalAlignment="Center"
                   Margin="10, 10 , 5, 5" />
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="InputLengthInches"
                     Text="{Binding LengthInches, UpdateSourceTrigger=PropertyChanged}"

                     TextAlignment="Center"
                     VerticalAlignment="Center"
                     Width="200"
                     HorizontalAlignment="Center"
                     Padding="0, 3"
                     Margin="45, 10, 0,0" />
            <TextBlock Text="Inches"
                       HorizontalAlignment="Center"
                       Margin="5, 12, 0,0" />
        </StackPanel>
        <Button Content="Let's Do This"
                Command="{Binding SubmitCommand}"
                HorizontalAlignment="Center"
                Margin="10, 20,10 ,10"
                Padding="7"
                Background="LawnGreen" />
    </StackPanel>
</Window>